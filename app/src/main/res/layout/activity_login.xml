<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bege_100"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/name_logo"
        android:textColor="@color/navy"
        android:textSize="40sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/bege_100"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/navy"
        app:hintTextColor="@color/navy"
        app:helperTextTextColor="@color/red_900"
        app:helperTextEnabled="true"
        app:endIconMode="clear_text"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="@string/email_padrao"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/bege_100"
            android:textColorHint="@color/dark_black"
            app:helperTextEnabled="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLayoutSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/bege_100"
        app:startIconDrawable="@drawable/ic_senha"
        app:startIconTint="@color/navy"
        app:endIconCheckable="true"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/navy"
        app:hintTextColor="@color/light_blue"
        app:helperTextTextColor="@color/red_900"
        app:helperTextEnabled="true"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="@string/senha_padrao"
            android:textColorHint="@color/dark_black"
            android:inputType="numberPassword"
            app:helperTextEnabled="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/bt_entrar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:backgroundTint="@color/navy"
        style="@style/Animation.Design.BottomSheetDialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/nao_tem_conta_login"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtIrCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/clique_aqui_login"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/navy"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>